<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_vertical1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.1"
        android:orientation="vertical" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_vertical2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.9"
        android:orientation="vertical" />

    <!--vertical guidelines-->

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_horizontal0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.1"
        android:orientation="horizontal" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_horizontal_s"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.17"
        android:orientation="horizontal" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_horizontal1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.3"
        android:orientation="horizontal" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_horizontal2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.45"
        android:orientation="horizontal" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_horizontal3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.6"
        android:orientation="horizontal" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_horizontal4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.75"
        android:orientation="horizontal" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_horizontal5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.9"
        android:orientation="horizontal" />

    <!--horizontal guidelines-->

    <TextView
        android:id="@+id/tileText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="오늘 하루는 어땠나요?"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/guideline_vertical1"
        app:layout_constraintEnd_toEndOf="@id/guideline_vertical2"
        app:layout_constraintBottom_toBottomOf="@id/guideline_horizontal0" />

    <TextView
        android:id="@+id/subTitleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="감정우표를 선택해주세요"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@id/guideline_vertical1"
        app:layout_constraintEnd_toEndOf="@id/guideline_vertical2"
        app:layout_constraintTop_toTopOf="@id/guideline_horizontal0" />

    <TextView
        android:id="@+id/explainText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="선택한 감정우표를 기반으로 맞춤형 질문이 배달됩니다."
        android:textSize="8sp"
        app:layout_constraintStart_toStartOf="@id/guideline_vertical1"
        app:layout_constraintEnd_toEndOf="@id/guideline_vertical2"
        app:layout_constraintBottom_toBottomOf="@id/guideline_horizontal_s" />

    <!--title-->

    <ImageView
        android:id="@+id/joyImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/group_573"
        app:layout_constraintStart_toStartOf="@id/guideline_vertical1"
        app:layout_constraintEnd_toEndOf="@id/guideline_vertical2"
        app:layout_constraintBottom_toBottomOf="@id/guideline_horizontal1" />

    <TextView
        android:id="@+id/joyText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="더없이 행복한 하루였어요"
        app:layout_constraintStart_toStartOf="@id/guideline_vertical1"
        app:layout_constraintEnd_toEndOf="@id/guideline_vertical2"
        app:layout_constraintTop_toTopOf="@id/guideline_horizontal1" />

    <!--widget pair1-->

    <ImageView
        android:id="@+id/exitedImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/group_574"
        app:layout_constraintStart_toStartOf="@id/guideline_vertical1"
        app:layout_constraintEnd_toEndOf="@id/guideline_vertical2"
        app:layout_constraintBottom_toBottomOf="@id/guideline_horizontal2" />

    <TextView
        android:id="@+id/exitedText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="들뜨고 흥분돼요"
        app:layout_constraintStart_toStartOf="@id/guideline_vertical1"
        app:layout_constraintEnd_toEndOf="@id/guideline_vertical2"
        app:layout_constraintTop_toTopOf="@id/guideline_horizontal2" />

    <!--widget pair2-->

    <ImageView
        android:id="@+id/sosoImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/group_575"
        app:layout_constraintStart_toStartOf="@id/guideline_vertical1"
        app:layout_constraintEnd_toEndOf="@id/guideline_vertical2"
        app:layout_constraintBottom_toBottomOf="@id/guideline_horizontal3" />

    <TextView
        android:id="@+id/sosoText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="평범한 하루였어요"
        app:layout_constraintStart_toStartOf="@id/guideline_vertical1"
        app:layout_constraintEnd_toEndOf="@id/guideline_vertical2"
        app:layout_constraintTop_toTopOf="@id/guideline_horizontal3" />

    <!--widget pair3-->

    <ImageView
        android:id="@+id/nervousImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/group_576"
        app:layout_constraintStart_toStartOf="@id/guideline_vertical1"
        app:layout_constraintEnd_toEndOf="@id/guideline_vertical2"
        app:layout_constraintBottom_toBottomOf="@id/guideline_horizontal4" />

    <TextView
        android:id="@+id/nervousText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="생각이 많아지고 불안해요"
        app:layout_constraintStart_toStartOf="@id/guideline_vertical1"
        app:layout_constraintEnd_toEndOf="@id/guideline_vertical2"
        app:layout_constraintTop_toTopOf="@id/guideline_horizontal4" />

    <!--widget pair4-->

    <ImageView
        android:id="@+id/madImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/group_462"
        app:layout_constraintStart_toStartOf="@id/guideline_vertical1"
        app:layout_constraintEnd_toEndOf="@id/guideline_vertical2"
        app:layout_constraintBottom_toBottomOf="@id/guideline_horizontal5" />

    <TextView
        android:id="@+id/madText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="부글부글 화가나요"
        app:layout_constraintStart_toStartOf="@id/guideline_vertical1"
        app:layout_constraintEnd_toEndOf="@id/guideline_vertical2"
        app:layout_constraintTop_toTopOf="@id/guideline_horizontal5" />

    <!--widget pair5-->

</androidx.constraintlayout.widget.ConstraintLayout>